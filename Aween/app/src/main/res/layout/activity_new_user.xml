<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".NewUser">


    <TextView
        android:id="@+id/TaxtViwe"
        android:layout_width="207dp"
        android:layout_height="193dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/almarai_bold"
        android:gravity="left"
        android:text="أنشئ حسابك"
        android:textColor="#FFFAF1"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/almarai"
        android:gravity="center"
        android:text="&quot;وقف الهدر من أجل عالم خالي من الجوع&quot;"
        android:textColor="#FFFAF1"
        android:textSize="20sp" />


    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/rountbtn"
        android:fontFamily="@font/almarai"
        android:text="إنشاء الحساب"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TaxtViwe"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:fontFamily="@font/almarai"
        android:gravity="left"
        android:hint="الإسم"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#353232"
        android:textColorHint="#353232"
        android:textSize="25sp" />


    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:gravity="left"
        android:ems="10"
        android:fontFamily="@font/almarai"
        android:hint="البريد الإلكتروني"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#353232"
        android:textColorHint="#353232"
        android:textSize="25sp" />


    <EditText
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:gravity="left"
        android:fontFamily="@font/almarai"
        android:hint="الرقم السري"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#353232"
        android:textColorHint="#353232"
        android:textSize="25sp" />


    <EditText
        android:id="@+id/Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:gravity="left"
        android:ems="10"
        android:fontFamily="@font/almarai"
        android:hint="رقم الهاتف"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#353232"
        android:textColorHint="#353232"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/createText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/almarai"
        android:gravity="center"
        android:text="لدي حساب بالفعل!"
        android:textColor="#DDCEB3"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="149dp"
        android:visibility="invisible" />


</RelativeLayout>